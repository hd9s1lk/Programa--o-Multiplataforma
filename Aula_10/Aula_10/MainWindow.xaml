<Window x:Class="Aula_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_10"
        mc:Ignorable="d"
        Title="Gestão de Bateria" Height="250" Width="400">
    <Grid>
        <ProgressBar x:Name="pbBateria" HorizontalAlignment="Center" Height="61" Margin="0,56,0,0" VerticalAlignment="Top" Width="252"/>
        <Button x:Name="btnCarregar" Content="+" HorizontalAlignment="Left" Margin="74,138,0,0" VerticalAlignment="Top" Height="65" Width="57" Click="btnCarregar_Click"/>
        <Button x:Name="btnDescarregar" Content="-" HorizontalAlignment="Left" Margin="227,144,0,0" VerticalAlignment="Top" Width="69" RenderTransformOrigin="0.5,0.5" Height="64" Click="btnDescarregar_CLICK">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.084"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
