<Window x:Class="Aula_12_03.AdicionarFigura"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_12_03"
        mc:Ignorable="d"
        Title="AdicionarFigura" Height="250" Width="800">
    <Grid>
        <ComboBox x:Name="cbFigura" HorizontalAlignment="Left" Height="26" Margin="91,0,0,0" VerticalAlignment="Center" Width="161">
            <ComboBoxItem Content="Quadrado"/>
            <ComboBoxItem Content="Retangulo"/>
            <ComboBoxItem Content="Triangulo"/>
        </ComboBox>
        <Label Content="Figura" HorizontalAlignment="Left" Margin="91,58,0,0" VerticalAlignment="Top" Width="81"/>
        <Button x:Name="Botao_Guardar" Content="Adicionar" HorizontalAlignment="Left" Margin="151,175,0,0" VerticalAlignment="Top" Click="Button_Guardar_Click"/>

    </Grid>
</Window>
