<Window x:Class="Aula_02.ListarClassificação"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_02"
        mc:Ignorable="d"
        Title="ListarClassificação" Height="250" Width="400">
    <Grid>
        <ListView x:Name="lvClassificacao" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Classificacao"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
